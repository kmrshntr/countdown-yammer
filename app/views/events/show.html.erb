<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-body">
<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date.strftime("%Y/%m/%d") %>
</p>
  </div>
</div>

<div class="btn-group">
<%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning"%>
<%= link_to 'Back', events_path, class: "btn btn-default"%>
</div>
