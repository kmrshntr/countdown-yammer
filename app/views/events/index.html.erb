<h1>Everyone's Events</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-hover " >
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Owner</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.start_at.strftime('%Y/%m/%d') %></td>
            <td><%= event.end_at.strftime('%Y/%m/%d') %></td>
            <td><%= event.owner.name %></td>
            <td>
              <% if event.owner == current_user %>
                  <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning'%>
              <% end %>
            </td>
            <td>
              <% if event.owner == current_user %>
                  <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



<%= link_to 'New Event', new_event_path, class: "glyphicon glyphicon-plus btn btn-primary" %>
