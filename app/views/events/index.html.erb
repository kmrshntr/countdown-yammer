<h1>Your Events</h1>
<div class="panel panel-default">
<div class="panel-heading">Event Listing</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.my_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%Y/%m/%d") %></td>
        <td>
          <div class="btn-group">
<%= link_to 'Edit', edit_event_path(event), class: "btn btn-warning" %>
<%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-default" %>
